{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/vinmat20/FIT3179/main/incomevsundernourishmentchildren.csv"
  },
  "title": "Income Level Vs Prevalence of Undernourished Children (%)",
  "height": "container",
  "width": 400,
  "layer": [
    {
      "selection": {"brush": {"type": "interval", "encodings": ["x"]}},
      "mark": {"type": "line", "point": true, "tooltip": true},
      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "Year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "Prevalence (%) Undernourished Children",
          "type": "quantitative",
          "title": "Prevalence of Underweight Children (%)"
        },
        "color": {
          "field": "Entity",
          "title": "Income Level",
          "type": "nominal",
          "scale": {
            "domain": [
              "High income",
              "Low & middle income",
              "Low income",
              "Lower middle income",
              "Middle income",
              "Upper middle income",
              "Average Prevalence (%)"
            ],
            "range": [
              "#66b3ff",
              "#00cccc",
              "#00b3b3",
              "#66cc00",
              "#e6e600",
              "#ffb84d",
              "#000000"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "brush", "value": 1},
          "value": 0.7
        }
      }
    },
    {
      "transform": [{"filter": {"selection": "brush"}}],
      "mark": {"type": "rule"},
      "encoding": {
        "y": {
          "aggregate": "mean",
          "field": "Prevalence (%) Undernourished Children",
          "type": "quantitative"
        },
        "color": {"value": "#000000"},
        "size": {"value": 1.5}
      }
    }
  ],
  "config": {}
}